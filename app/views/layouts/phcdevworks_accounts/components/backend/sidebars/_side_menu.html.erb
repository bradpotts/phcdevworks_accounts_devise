                                <% end %>
                            </div>
                        </div>
                    </div>
                    <div class="menu-item has-sub">
                        <a href="javascript:;" class="menu-link">
                            <div class="menu-text">Review Posts</div>
                            <div class="menu-caret"></div>
                        </a>
                        <div class="menu-submenu <%= phc_menu_active_controller("phcdevworks_tutorials/command/posts") %>">
                            <div class="menu-item <%= phc_menu_active_action_controller("phcdevworks_tutorials/command/posts", "Index") %>">
                                <%= link_to phcdevworks_tutorials.command_posts_path, class: "menu-link" do %>
