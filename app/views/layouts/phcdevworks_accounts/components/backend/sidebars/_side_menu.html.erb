<!-- Sidebar for PHCDevworks Engines -->
<div data-scrollbar="true" data-height="100%">

  <!-- Sidebar - User Profile Menu -->
  <ul class="nav">
    <% if current_user %>
      <li class="nav-profile">
        <a href="javascript:;" data-toggle="nav-profile">
          <div class="cover with-shadow"></div>
          <div class="image">
            <%= image_tag current_user.gravatar_url %>
          </div>
          <div class="info">
            <b class="caret pull-right"></b>
            <%= current_user.firstname + ' ' + current_user.lastname  %>
            <small><%= current_user.username %></small>
          </div>
        </a>
      </li>
      <li>
        <ul class="nav nav-profile">
          <li>
            <%= link_to phcdevworks_accounts.edit_user_registration_path do %>
              <i class="fas fa-cogs"></i> Account Settings
            <% end %>
          </li>
          <li>
            <%= link_to phcdevworks_accounts.destroy_user_session_path do %>
              <i class="fas fa-sign-out-alt"></i> Logout
            <% end %>
          </li>
        </ul>
      </li>
    <% end %>
  </ul>
  <!-- Sidebar - User Profile Menu -->

  <!-- Sidebar - Sidebar Navigation -->
  <ul class="nav">

    <% if defined?phccodesnipperpro %>
      <!-- Sidebar - Sidebar Navigation - PHCCodeSnipper -->
      <li class="nav-header">Code Snippets</li>
      <li class="has-sub">
        <a href="javascript:;">
          <b class="caret"></b>
          <i class="fas fa-newspaper"></i>
          <span>Code Snippets</span>
        </a>
        <ul class="sub-menu">
          <li class="<%= phc_menu_active_controller('phccodesnipperpro/script/posts') %>"><%= link_to 'Snippet Index', phccodesnipperpro.script_snippets_path %></li>
          <li class="<%= phc_menu_active_controller('phccodesnipperpro/script/posts#new') %>"><%= link_to 'New Snippet', phccodesnipperpro.new_script_snippet_path %></li>
        </ul>
      </li>
      <!-- Sidebar - Sidebar Navigation - PHCCodeSnipper -->
    <% end %>

    <% if defined?phcpresspro %>
      <!-- Sidebar - Sidebar Navigation - PHCPress -->
      <li class="nav-header">Article Management</li>
      <li class="has-sub">
        <a href="javascript:;">
          <b class="caret"></b>
          <i class="fas fa-newspaper"></i>
          <span>Article Posts</span>
        </a>
        <ul class="sub-menu">
          <li class="<%= phc_menu_active_controller('phcpresspro/article/posts') %>"><%= link_to('Article Index', phcpresspro.article_posts_path) %></li>
          <li class="<%= phc_menu_active_controller('phcpresspro/article/posts#new') %>"><%= link_to('New Aritcle', phcpresspro.new_article_post_path) %></li>
        </ul>
      </li>
      <li class="has-sub">
        <a href="javascript:;">
          <b class="caret"></b>
          <i class="fas fa-sitemap"></i>
          <span>Article Categories</span>
        </a>
        <ul class="sub-menu">
          <li class="<%= phc_menu_active_controller('phcpresspro/article/categories') %>"><%= link_to('Category Index', phcpresspro.article_categories_path) %></li>
          <li class="<%= phc_menu_active_controller('phcpresspro/article/categories#new') %>"><%= link_to('New Category', phcpresspro.new_article_category_path) %></li>
        </ul>
      </li>
      <!-- Sidebar - Sidebar Navigation - PHCPress -->
    <% end %>

    <% if defined?phcmemberspro %>
      <!-- Sidebar - Sidebar Navigation - PHCMembers -->
      <li class="nav-header">Membership Manager</li>
      <li class="has-sub">
        <a href="javascript:;">
          <b class="caret"></b>
          <i class="fas fa-users"></i>
          <span>Member's Data</span>
        </a>
        <ul class="sub-menu">
          <li class="<%= phc_menu_active_controller('phcmemberspro/member/profiles') %>"><%= link_to('Profile Index', phcmemberspro.member_profiles_path) %></li>
          <li class="<%= phc_menu_active_controller('phcmemberspro/member/profiles#new') %>"><%= link_to('New Member Profile', phcmemberspro.new_member_profile_path) %></li>
        </ul>
      </li>
      <li class="has-sub">
        <a href="javascript:;">
          <b class="caret"></b>
          <i class="fas fa-list-alt"></i>
          <span>Member's Directory</span>
        </a>
        <ul class="sub-menu">
          <li class="<%= phc_menu_active_controller('phcmemberspro/directory/categories') %>"><%= link_to('Directory Index', phcmemberspro.directory_categories_path) %></li>
          <li class="<%= phc_menu_active_controller('phcmemberspro/directory/categories#new') %>"><%= link_to('New Directory Listing', phcmemberspro.new_directory_category_path) %></li>
        </ul>
      </li>
      <!-- Sidebar - Sidebar Navigation - PHCMembers -->
    <% end %>

    <% if defined?phcscriptcdnpro %>
      <!-- Sidebar - Sidebar Navigation - PHCScriptCDN -->
      <li class="nav-header">Script Management</li>
      <li class="has-sub">
        <a href="javascript:;">
          <b class="caret"></b>
          <i class="fas fa-newspaper"></i>
          <span>Script Posts</span>
        </a>
        <ul class="sub-menu">
          <li class="<%= phc_menu_active_controller('phcscriptcdnpro/script/listings') %>"><%= link_to "All Script Listings", phcscriptcdnpro.script_listings_path %></li>
          <li class="<%= phc_menu_active_controller('phcscriptcdnpro/script/listings#new') %>"><%= link_to "Add a New Listing", phcscriptcdnpro.new_script_listing_path %></li>
        </ul>
      </li>
      <li class="has-sub">
        <a href="javascript:;">
          <b class="caret"></b>
          <i class="fas fa-sitemap"></i>
          <span>Script Extras</span>
        </a>
        <ul class="sub-menu">
          <li class="<%= phc_menu_active_controller('phcscriptcdnpro/script/authors') %>"><%= link_to "Script Authors", phcscriptcdnpro.script_authors_path %></li>
          <li class="<%= phc_menu_active_controller('phcscriptcdnpro/script/licences') %>"><%= link_to "Script Licences", phcscriptcdnpro.script_licences_path %></li>
          <li class="<%= phc_menu_active_controller('phcscriptcdnpro/script/extensions') %>"><%= link_to "Script Extensions", phcscriptcdnpro.script_extensions_path %></li>
          <li class="<%= phc_menu_active_controller('phcscriptcdnpro/script/versions') %>"><%= link_to "Script Versions", phcscriptcdnpro.script_versions_path %></li>
        </ul>
      </li>
      <!-- Sidebar - Sidebar Navigation - PHCScriptCDN -->
    <% end %>

    <% if current_user && current_user.admin? %>
      <!-- Sidebar - Sidebar Navigation - PHCAccounts Admin Options -->
      <li class="nav-header">User Administration</li>
      <li class="has-sub">
        <a href="javascript:;">
          <b class="caret"></b>
          <i class="fas fa-user"></i>
          <span>Admin</span>
        </a>
        <ul class="sub-menu">
          <li class="<%= phc_menu_active_controller('phcdevworks_accounts/admin/users') %>"><%= link_to 'User List', phcdevworks_accounts.admin_users_index_path %></li>
        </ul>
      </li>
      <!-- Sidebar - Sidebar Navigation - PHCAccounts Admin Options -->
    <% end %>

    <% if current_user %>
      <!-- Sidebar - Sidebar Navigation - PHCAccounts User Options -->
      <li class="nav-header">Your Account</li>
      <li class="has-sub">
        <a href="javascript:;">
          <b class="caret"></b>
          <i class="fas fa-user"></i>
          <span>Accounts Settings</span>
        </a>
        <ul class="sub-menu">
          <li class="<%= phc_menu_active_controller('phcdevworks_accounts/user/edit') %>"><%= link_to 'Settings', phcdevworks_accounts.edit_user_registration_path %></li>
          <li class="<%= phc_menu_active_controller('phcdevworks_accounts/user/new') %>"><%= link_to 'Logout', phcdevworks_accounts.destroy_user_session_path, method: :delete %></li>
        </ul>
      </li>
      <!-- Sidebar - Sidebar Navigation - PHCAccounts User Options -->
    <% end %>

    <!-- Sidebar - Sidebar Minifier -->
    <li>
      <a href="javascript:;" class="sidebar-minify-btn" data-click="sidebar-minify">
        <i class="fa fa-angle-double-left"></i>
      </a>
    </li>
    <!-- Sidebar - Sidebar Minifier -->

  </ul>
  <!-- Sidebar - Sidebar Navigation -->

</div>
<!-- Sidebar for PHCDevworks Engines -->
